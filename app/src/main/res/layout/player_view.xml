<?xml version="1.0" encoding="utf-8"?>
<com.smile.moment.widget.PlayerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_player"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp">

        <ImageView
            android:id="@+id/iv_player_disc"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:contentDescription="@null"
            android:src="@drawable/placeholder_disk_play" />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/placeholder_disk_play" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_player_needle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/rl_player"
        android:layout_marginRight="40dp"
        android:layout_marginTop="-16dp"
        android:contentDescription="@null"
        android:src="@drawable/play_needle" />


</com.smile.moment.widget.PlayerView>